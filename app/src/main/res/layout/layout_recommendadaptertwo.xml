<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="1dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/recommend_adapter_tv_two"
            android:layout_weight="1"
            android:text="123132132132123333333333333"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_weight="1"
        android:id="@+id/recommend_adapter_img_two11"
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_weight="1"
        android:id="@+id/recommend_adapter_img_two22"
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_weight="1"
        android:id="@+id/recommend_adapter_img_two33"
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content" />
</LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:id="@+id/recommend_adapter_comment_two"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/img_comment"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/recommend_adapter_admire_two"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/img_admire"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/recommend_adapter_data_two"
            android:layout_marginLeft="15dp"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/recommend_adapter_follow_two"
            android:layout_width="wrap_content"
            android:text="@string/recommend_follow"
            android:textColor="@color/red"
            android:layout_marginLeft="10dp"
            android:drawablePadding="10dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical|right"
            android:drawableLeft="@mipmap/img_attention"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>
